%body#show
	.project_wrapper#show
		.project
			.project_header	
				%h1= @project.name
				%h3= @project.category
			= image_tag @project.image.url(:large)
			%p= @project.description

- if user_signed_in?
	= link_to "Edit", edit_project_path(@project)
	= link_to "Destroy",  project_path(@project), method: :delete, data: {confim: "Are you sure?"}